# Stage 1
FROM node:18.14.2 as node
WORKDIR /app

# Copying files into app
COPY . .

# Installing dependences
RUN npm install --omit=dev

# Executing common build script
RUN npm run build -w common

# Exposing port
EXPOSE ${MAIN_PORT}

# Setting launch command
CMD [ "npm", "run", "prod", "-w", "back-main" ]